<h3>確認画面</h3>
<%= form_with(model: @comment, url: comments_path, local: true) do |form| %>
  <%= image_tag(@comment.image.url) if @comment.image && @comment.image.url %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :content %>
  <p>本文:<%= @comment.content %></p>
  <%= form.submit  "投稿する" %>
<% end %>
<%= form_with(model:@comment, url:new_comment_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "戻る", name: "back" %>
<% end %>
  